int *f1(int *a, int index) {
    return a + index;
}

int *f2(int *a, int index) {
    return &a[index];
}

int *f3(int *a) {
    return a++;
}

int *f4(int *a) {
    return ++a;
}

int *g1(int *a, int index) {
    return a - index;
}

int *g2(int *a, int index) {
    return &a[-index];
}

int *g3(int *a) {
    return a--;
}

int *g4(int *a) {
    return --a;
}

